<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="50dp"
    android:layout_marginVertical="50dp"
    android:paddingHorizontal="20dp"
    android:paddingVertical="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="3"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/img_profile1"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/img_profile3" />

        <ImageView
            android:id="@+id/img_profile2"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/img_profile2"/>

        <ImageView
            android:id="@+id/img_profile3"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/img_profile8" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/img_profile4"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/img_profile9" />

        <ImageView
            android:id="@+id/img_profile5"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/img_profile5" />

        <ImageView
            android:id="@+id/img_profile6"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/img_profile6" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>